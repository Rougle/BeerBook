

h1 Add beer
form(name='beerForm', class='form-horizontal')
  .form-group
    label.control-label Name
    input.form-control(ng-model='beer.name', ng-required='true')
  .form-group
    label.control-label Type
    textarea.form-control(ng-model='beer.type', ng-required='true')
  .form-group
    label.control-label Description
    textarea.form-control(ng-model='beer.description', ng-required='true')
  .form-group
    label.control-label Upload image
    button(type='file', ngf-select='uploadFiles($file, $invalidFiles)', accept='image/*', ngf-max-size='2MB') Select File

    div(style='font:smaller')
      | {{f.name}} {{errFile.name}} {{errFile.$error}} {{errFile.$errorParam}}
      span.progress(ng-show='f.progress >= 0')
        div(style='width:{{f.progress}}%', ng-bind="f.progress + '%'")
    |   {{errorMsg}}


  input.btn.btn-primary(type='button', ng-disabled='beerForm.$invalid || f.name == null', value='Save', ng-click='save()')